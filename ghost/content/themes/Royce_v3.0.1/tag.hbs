{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The content area on the tag archive page --}}
<main id="main" class="site-main">

    {{!-- Post feed --}}
    <div class="post-feed inner">
        {{!-- Everything inside the #tag tags pulls data from the tag --}}
        {{#tag}}
        <header class="post-feed-header has-underline">
            <h1 class="post-feed-title h4">{{name}}</h1>
            <p class="post-feed-desc small-caps">{{plural ../pagination.total empty=(t "A collection of 0 posts") singular=(t "A collection of % post") plural=(t "A collection of % posts")}}</p>
        </header>
        {{/tag}}
        {{!--Includes the post loop - partials/loop-archive.hbs --}}
        {{> "loop-archive"}}
    </div>

    {{!-- If members enabled, includes the subscribe cta - partials/member-subscribe-box.hbs --}}
    {{#if @site.members_enabled}}
        {{#unless @member}}
            {{> "member-subscribe-box"}}
        {{/unless}}
    {{/if}}

</main>
